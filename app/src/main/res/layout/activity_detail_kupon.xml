<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/putih"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.sisco.ayomileh.Activity.DetailKuponActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Poin dan Kupon"
                android:textColor="#FFF" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearQRDetail"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="Diskon 12% dari total belanja."
                android:textSize="22sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/qr"
                android:scaleType="fitXY"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal"
                android:text="Tunjukkan QR Code ini pada pramuniaga."
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnNonaktifkanKupon"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:paddingHorizontal="40dp"
                android:text="NONAKTIFKAN KUPON"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Dipersembahkan oleh :"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo_infomaret"
                    android:layout_width="150dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>