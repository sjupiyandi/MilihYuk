<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    tools:context="com.example.sisco.ayomileh.Fragment.KuponFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_redeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_persen"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">
                <TextView
                    android:id="@+id/txtPersenan"
                    android:layout_marginRight="5dp"
                    android:text="20%"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ivLogoDiskon"
                    android:src="@drawable/logo_infomaret"
                    android:layout_width="80dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtDiskon"
                android:layout_below="@+id/linear_persen"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:text="Diskon Infomaret"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            <Button
                android:id="@+id/btnTunjukkan"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="true"
                android:text="Tunjukkan"
                android:textColor="@color/putih"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
